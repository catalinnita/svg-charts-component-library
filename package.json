{
  "private": true,
  "workspaces": [
    "components/*",
    "utils/*",
    "docs/",
    "api/"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^27.4.1",
    "eslint": "7.32.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "turbo": "latest"
  }
}
